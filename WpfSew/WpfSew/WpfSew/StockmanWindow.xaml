<Window x:Class="WpfSew.StockmanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSew"
        mc:Ignorable="d"
        Title="StockmanWindow" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <Grid Background="#FF82C164">
        <Button Content="Button" Name="Bofd" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Bofd_Click"/>
        <Canvas  Name ="canvas" HorizontalAlignment="Left" Height="400" Margin="111,10,10,10" VerticalAlignment="Top" Width="671" OpacityMask="#FFE4BFBF">
            <Canvas.Background>
                <ImageBrush/>
            </Canvas.Background>
        </Canvas>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Click="Button_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="3.364"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.647"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
